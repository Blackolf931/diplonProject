@model IEnumerable<MVC_Store.Models.ViewModels.Account.OrdersForUserVM>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>


@if (!Model.Any())
{
    <h2 class="text-center">You have no orders.</h2>
}
else
{
    <table class="table">
        <tr>
            <th>
                OrderNumber
            </th>
           <th>
               ProductName
           </th>
            <th>
                CreatedAt
            </th>
            <th>
                Total
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderNumber)
                </td>
                               <td>
                    @foreach (var item2 in item.ProductsAndQuantity)
                    {
                        @item2.Key @:count:  @item2.Value <br />
                    }
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)BLR
                </td>

            </tr>
        }
    </table>
}